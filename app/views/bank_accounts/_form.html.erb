<div class="card-body">

  <%= form_with(model: account, local: true) do |form| %>
    <% if account.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(account.errors.count, "error") %> prohibited this bank account from being saved:</h2>

        <ul>
          <% account.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Bank Name</label>
      <div class="col-lg-6">
        <%= form.text_field :bank_name, :class => 'form-control', :placeholder => "Enter Bank Name", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Account Title</label>
      <div class="col-lg-6">
        <%= form.text_field :account_title, :class => 'form-control', :placeholder => "Enter Account Title", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-lg-3 control-label text-lg-right pt-2">Account Number</label>
      <div class="col-lg-6">
        <%= form.text_field :account_number, :class => 'form-control', :placeholder => "Enter Account Number", required: true %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function(){
    $("#datepicker").datepicker({
      autoclose: true,
      todayHighlight: true
    })
  });
</script>