<!doctype html>
<html class="fixed">

<script src="/assets/modernizr.js"></script>
<section role="main" class="content-body">
  <div class="row">
    <div class="col">
      <section class="card">
        <header class="card-header">
          <div class="card-actions">
            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
          </div>

          <h2 class="card-title">Bank Account</h2>
        </header>
        <div class="card-body">
          <% if @bank_account.blank? %>
            <%= link_to 'Bank Account', new_bank_account_path, class: 'btn btn-primary' %>
          <% elsif (current_user.role.in? ['user', 'plug_user']) && (current_user.bank_account.blank?) %>
            <%= link_to 'Bank Account', new_bank_account_path, class: 'btn btn-primary' %>
          <% end %>
          <p>
            <strong>Bank Name:</strong>
            <%= @bank_account&.bank_name %>
          </p>

          <p>
            <strong>Account Title:</strong>
            <%= @bank_account&.account_title %>
          </p>

          <p>
            <strong>Account Number:</strong>
            <%= @bank_account&.account_number %>
          </p>
          <%= link_to 'Edit', edit_bank_account_path(@bank_account.id) if @bank_account.present? %> |
          <%= link_to 'Destroy', @bank_account, method: :delete, data: { confirm: 'Are you sure?' } if @bank_account.present? %> |
          <%= link_to 'Back', bank_accounts_path %>
          <p id="notice"><%= notice %></p>
        </div>
      </section>
    </div>
  </div>
</section>
