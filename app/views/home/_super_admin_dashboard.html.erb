<div class="row">
  <div class="col-lg-12">
    <div class="row mb-3">
      <div class="col-xl-3">
        <section class="card card-featured-left card-featured-secondary">
          <div class="card-body">
            <div class="widget-summary">
              <div class="widget-summary-col widget-summary-col-icon">
                <div class="summary-icon bg-secondary">
                  <i class="currency-style">&#82;</i>
                </div>
              </div>
              <div class="widget-summary-col">
                <div class="summary">
                  <h4 class="title">Main Account</h4>
                  <div class="info">
                    <strong class="amount"><%= number_with_delimiter(@account&.amount, :delimiter => ',') %></strong>
                  </div>
                </div>
                <div class="summary-footer">
                  <!--                        <a class="text-muted text-uppercase" href="JavaScript:void(0);">(withdraw)</a>-->
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <div class="col-xl-3">
        <section class="card card-featured-left card-featured-secondary">
          <div class="card-body">
            <div class="widget-summary">
              <div class="widget-summary-col widget-summary-col-icon">
                <div class="summary-icon bg-secondary">
                  <i class="currency-style">&#82;</i>
                </div>
              </div>
              <div class="widget-summary-col">
                <div class="summary">
                  <h4 class="title">Plug</h4>
                  <div class="info">
                    <strong class="amount"><%= number_with_delimiter(@account&.plug, :delimiter => ',') %></strong>
                  </div>
                </div>
                <div class="summary-footer">
                  <a class="text-muted text-uppercase" href="/plugs">(VIEW)</a>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <div class="col-xl-3">
        <section class="card card-featured-left card-featured-secondary">
          <div class="card-body">
            <div class="widget-summary">
              <div class="widget-summary-col widget-summary-col-icon">
                <div class="summary-icon bg-secondary">
                  <i class="currency-style">&#82;</i>
                </div>
              </div>
              <div class="widget-summary-col">
                <div class="summary">
                  <h4 class="title">Time Stamp</h4>
                  <div class="info">
                    <strong class="amount"><%= number_with_delimiter(@account&.time_stamp, :delimiter => ',') %></strong>
                  </div>
                </div>
                <div class="summary-footer">
                  <a class="text-muted text-uppercase" href="/time_stamps">(VIEW)</a>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <section class="card">
      <header class="card-header">
        <div class="card-actions">
          <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
          <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>

        <h2 class="card-title">Over Due</h2>
      </header>
      <div class="card-body">
        <table class="table table-responsive-md table-striped mb-0">
          <thead>
          <tr>
            <th>#</th>
            <th>User</th>
            <th>Amount</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
          <% loan_dues.each_with_index do |loan, index| %>
            <tr>
              <td><%= index +1 %></td>
              <td><%= loan.user.full_name %></td>
              <td><%= loan.amount %></td>
              <td><%= loan.status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
  <div class="col-lg-6">
    <section class="card">
      <header class="card-header">
        <div class="card-actions">
          <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
          <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>

        <h2 class="card-title">Due Date</h2>
      </header>
      <div class="card-body">
        <table class="table table-responsive-md table-striped mb-0">
          <thead>
          <tr>
            <th>#</th>
            <th>User</th>
            <th>Amount</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
          <% loan_over_dues.each_with_index do |loan, index| %>
            <tr>
              <td><%= index +1 %></td>
              <td><%= loan.user.full_name %></td>
              <td><%= loan.amount %></td>
              <td><%= loan.status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>