<div class="card-body">

  <%= form_with(model: loan, local: true) do |form| %>
    <% if loan.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

        <ul>
          <% loan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Description</label>
      <div class="col-lg-6">
        <%= form.text_area :description, :class => 'form-control', :placeholder => "Enter First Description", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Amount</label>
      <div class="col-lg-6">
        <%= form.number_field :amount, :class => 'form-control', :placeholder => "Enter First Amount", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-lg-3 control-label text-lg-right pt-2">Due Date</label>
      <div class="col-lg-6">
        <div id="datepicker" class="input-group date" data-date-format="mm-dd-yyyy" >
														<span class="input-group-prepend">
															<span class="input-group-text">
																<i class="fas fa-calendar-alt"></i>
															</span>
														</span>
          <%= form.text_field :due_date, id: :loan_due_date, :class => 'form-control' %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function(){
    $("#datepicker").datepicker({
      autoclose: true,
      todayHighlight: true
    })
  });
</script>